<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<!-- Aki hay ke poner los nombres  mano del paquete si esta fusilado
el name para las consultas y table es el nombre en sql
si esta con update crea otra tabla.. con create tambien
 -->
<hibernate-mapping package="hibernate">

    <class name="Persona" table="Persona2">
        <id name="id" column="id">
            <generator class="increment"/>
        </id>
        <property name="nombre" type="string"/>
        <property name="apellido" type="string"/>
        <property name="email" type="string"/>
    </class>

</hibernate-mapping>